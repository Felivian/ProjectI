<!-- views/home.ejs -->
<!doctype html>
<html lang="en">
<head>
    <title>ProjectI</title>
    <%- include('partial/head', {}); %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js"></script>
	<script src="js/home.js"></script>
    <style>
    	button.no-ads {
    		display: none;
    	}
    	button.new-ads {
    		display: none;
    	}
    	select {
    		margin-bottom: 10px;
    	}
    	.content-area {
    		margin: auto;
    	}
    	div.user-data {
    		padding: 0px;

    	}
    	div.nick {
    		padding: 0px;
    	}
    	div.user-ad-outer, .op {
    		padding-left: 8px;
    		padding-right: 8px;
    	}
    	a.nick {
    		display: block;
    		padding: 0px;
    	}
    	img.game-logo {
    		padding-top: 10px;
    		padding-bottom: 10px;
    		width: 35%;
    	}
    	div.user-data {
    		padding-bottom: 10px;
    	}
    	.panel-primary, .panel-primary>.panel-heading {
    		background-color: #28292f;
    		border-color: #28292f;
    	}
    	.panel-primary>.panel-heading:hover {
    		background-color: #000000;
    	}
    	div.user-ad-inner {
    		padding: 0px;
    		background-color: #404b62;
    		color: white;
   
    	}
    	div.user-ad-inner:hover {
    		//background-color: #5C6BC0;

    	}
    	.table-striped>tbody>tr:nth-child(odd) {
		   background-color: #30384a;
		}
		body {
			background-color: #242d44;
		}
		select option, select {
			background-color: #99aab5 !important;
			color: #000000 !important;

		}

		.grayscale {
		    -webkit-filter: grayscale(100%); /* Safari 6.0 - 9.0 */
   			filter: grayscale(100%);
		}

		.blur {
		    -webkit-filter: blur(2px);
		    filter: blur(2px);
		}

		.sepia {
			-webkit-filter: sepia(100%);
			filter:sepia(100%);
		}
		.notSuiting {
			//border-radius: 10px;
    		
		}
	
		
		button.close {
			position: relative;
			float: left;
			top: 0;
			left: 0;
			background-color: red;
			color: white;
		}
		div.mobile-nav {
			position: fixed;
			bottom: 0;
			left: 0;
			margin: 0;
			background-color: #333;
			padding: 0;
			height: 40px;
		}
		ul.mobile-nav  {
			height: 100%;
			padding: 0;
		}
		ul.mobile-nav > li {
			display: inline-block;
			background-color: #333;
			height: 100%;
			line-height: 40px;
			color: white;

		}
		ul.mobile-nav > li.active {
			background-color: #080808;
		}

		.pick.fixed > .pick-data > table > thead {
			font-size: 12px;
			
		}
		.pick > .pick-data > table > thead > tr > th {
			padding-top: 4px;
			padding-bottom: 4px;
		}
		.picked-user > div, .picked-user > button {
			padding: 0px;
		}
		.picked-user {
			padding: 0px;
			border-radius: 10px;
    		border: 2px solid #2c2c2f;
    		background-color: #f4feff;
    		color: black;
		}
		span.group {
			font-size: 20px;

		}
		.select-area,  .buttons {
			margin-bottom: 10px;
		}

		.pick.fixed, button.picked.fixed {
			position: fixed;
			right: 20px;
			bottom: 10px;
		}
		div.pick.fixed {
			display: none;
			max-height: 60%;
			background-color: #2c2c2f;
			padding: 0px;
			bottom: 60px !important;
			overflow-y: hidden;
			color: white;
			border-radius: 10px;
		}
		div.mobile.pick {
			position: inherit;
			color: white;
			background-color: #404b62;
			border: 2px solid #2c2c2f;
			border-color: #28292f;
			border-radius: 10px;
			margin: 0;
		}

		.user-info {
			opacity: 1;
			display: block;
			width: 100%;
			height: auto;
			transition: .5s ease;
			backface-visibility: hidden;
		}

		.add-ad {
			transition: .5s ease;
			opacity: 0;
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			-ms-transform: translate(-50%, -50%)
		}

		.user-ad-outer:hover .user-info {
			opacity: 0.3;
		}
		.user-ad-outer:hover .add-ad {
			opacity: 1 !important;
		}
		


    </style>
		

</head>
<body>
	<%- include('partial/navbar', {user: user, url: url}); %>
<div class="container ">
    <div class="row select-area col-md-12 text-center">
    	<div class="col-md-12">
	    	<select required class="form-control game">
				<option value="" disabled selected hidden>Game name</option>
				<% var i=0; %>
				<% for(i=0; i<games.length; i++) { %>
					<% var str = games[i].name.replace(/\s/g, ''); %>
					<option value= <%= str %> ><%= games[i].name %></option>
				<% } %>
			</select>
		</div>
		<div class="col-md-2">
			<select required class="form-control hidden modeName">
				<option value="" disabled selected hidden>Mode name</option>
				
			</select>
		</div>

		<div class="col-md-2">
			<select required class="form-control hidden modePlayers">
				<option value="" disabled selected hidden>Size of final group</option>
				<% for(var j=1; j<13; j++) { %>
					<option class="" value= <%= j %> ><%= j %></option>
				<% } %>
			</select>
		</div>
		
		<div class="col-md-2">
			<select required class="form-control hidden yourGroup">
				<option value="" disabled selected hidden>Your group size</option>
			</select>
		</div>

		<div class="col-md-2">
	    	<select required class="form-control hidden rank">
				<option value="" disabled selected hidden>Rank name</option>
			</select>
		</div>
		<div class="col-md-2">
	    	<select required class="form-control hidden platform">
				<option value="" disabled selected hidden>Platform</option>
			</select>
		</div>
		<div class="col-md-2">
	    	<select required class="form-control hidden region">
				<option value="" disabled selected hidden>Region</option>
			</select>
		</div>
		
	</div>
	<div class="row col-md-12 text-center buttons">
		<button class="select refresh col-md-6 col-xs-12">refresh</button>
		<button class="select reset col-md-6 col-xs-12">reset</button>
	</div>
	<div class="row col-md-12 text-center">
		<button class="new-ads">New content!</button>
	</div>
	<div class="row content-area col-sm-12 text-center">

	</div>
	<div class="hidden-xs col-sm-3 pick fixed text-center">
		<span class="group">?/?</span>
		<div class="pick-data">	
			<br>
			<table width="100%" class="table">
				<thead class="thead-inverse">
					<tr> <th class="text-center">Game:</th><th class="text-center gameName"></th></tr>
					<tr> <th class="text-center">Mode:</th><th class="text-center modeName"></th></tr>
					<tr> <th class="text-center">Maximum group:</th><th class="text-center modePlayers"></th></tr>
					<tr> <th class="text-center">Rank:</th><th class="text-center rank"></th></tr>
					<tr> <th class="text-center">Platform:</th><th class="text-center platform"></th></tr>
					<tr> <th class="text-center">Region:</th><th class="text-center region"></th></tr>
				</thead>
			</table>
		</div>
		Your team
		<div class="picked-users">
		</div>
		<button>Send</button>	
	</div>
	<button class="hidden-xs fixed picked">CLICK</button>
	
	<div class="row col-xs-12 hidden-xs hidden-sm hidden-md hidden-lg mobile pick text-center">
		<span class="group">?/?</span>
		<div class="pick-data">	
			<br>
			<table width="100%" class="table">
				<thead class="thead-inverse">
					<tr> <th class="text-center">Game:</th><th class="text-center gameName"></th></tr>
					<tr> <th class="text-center">Mode:</th><th class="text-center modeName"></th></tr>
					<tr> <th class="text-center">Maximum group:</th><th class="text-center modePlayers"></th></tr>
					<tr> <th class="text-center">Rank:</th><th class="text-center rank"></th></tr>
					<tr> <th class="text-center">Platform:</th><th class="text-center platform"></th></tr>
					<tr> <th class="text-center">Region:</th><th class="text-center region"></th></tr>
				</thead>
			</table>
			
		</div>
		Your team
		<div class="picked-users">

		</div>
		<button>Send</button>
			
	</div>


	<p id="loading">
		<img src="images/loading.gif" alt="Loadingâ€¦" />
	</p>

	<button class="no-ads">No more ads. Click to refresh</button>


  		<div class="mobile-nav text-center col-xs-12 align-middle visible-xs">
  			<ul class="mobile-nav">
  				<li class="col-xs-6 align-middle active">Ads</li>
  				<li class="col-xs-6 align-middle">Picks</li>
  			</ul>
  		</div>
</div><!-- /.container-fluid -->



<script>

</script>
</body>

</html>
